<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h3 class="m-0">Get your car insurance quote</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("InsuranceQuote", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-6">
                    <label for="name">First Name</label>
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-6">
                    <label for="name">Last Name</label>
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-6">
                    <label for="name">Email</label>
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group col-md-6">
                    <label for="name">Date of Birth</label>
                    <input name="DateOfBirth" type="date" class="form-control" placeholder="Date of Birth" />
                </div>
                <div class="form-group col-md-12">
                    <label for="name">Vehicle Year</label>
                    <input name="CarYear" type="number" class="form-control" placeholder="yyyy" />
                </div>
                <div class="form-group col-md-6">
                    <label for="name">Vehicle Make</label>
                    <input name="CarMake" type="text" class="form-control" placeholder="Vehicle Make" />
                </div>
                <div class="form-group col-md-6">
                    <label for="name">Vehicle Model</label>
                    <input name="CarModel" type="text" class="form-control" placeholder="Vehicle Model" />
                </div>
                <div class="form-group col-md-6">
                    <label for="name">Have you ever been charged with a DUI?</label>
                    <input name="DUI" type="checkbox" class="form-control form-inline" placeholder="DUI Charge?" />
                </div>
                <div class="form-group col-md-6">
                    <label for="name">Number of issued speeding tickets</label>
                    <input name="SpeedingTicket" type="number" class="form-control" placeholder="Number of Speeding Tickets" />
                </div>
                <div class="form-group col-md-6">
                    <label for="name">Full Coverage</label>
                    <input name="FullCoverage" type="checkbox" class="form-control" placeholder="Full Coverage?" />
                </div>
                <button type="submit" class="btn btn-block btn-primary">Submit Request</button>
            </div>
            }
        </div>
    </div>
</div>