@using InsuranceQuotes.ViewModel
@model List<RequestVm>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Quotes</h5>
        </div>
        <div class="card-body">
            @foreach (var request in Model)
            {
                using (Html.BeginForm("InsuranceQuote", "Admin", FormMethod.Post))
                {
                    <input type="hidden" name="Id" value="@request.Id" />
                    <div class="row mb-3">
                        <div class="col-2">
                            @request.FirstName
                        </div>
                        <div class="col-2">
                            @request.LastName
                        </div>
                        <div class="col-md-6">
                            @request.EmailAddress
                        </div>
                        <div class="col-md-6">
                            @request.Quote
                        </div>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-danger btn-block">
                            Unsubscribe
                        </button>
                    </div>
                }
            }


            </div>
    </div>
</div>